<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Blog Uygulaması</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-social.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">               
                <a class="btn btn-default navbar-btn" href="/Blog/List">Ana Sayfa&nbsp;&nbsp;<span class="glyphicon glyphicon-home"></span></a>           
            </div>
                <a class="btn btn-default navbar-btn navbar-right" href="/Admin/HomeAdmin/Login">Admin&nbsp;&nbsp;<span class="glyphicon glyphicon-user"></span></a>
        </div>
    </div>

    <div class="container body-content">
        <div class="row">
            <div class="col-md-12">
                <div class="navbar navbar-default">
                    <div class="container">
                        <ul class="nav nav-pills">
                            <li class="navbar-brand" role="presentation"><a href="/Blog/List">Ana Sayfa</a></li>
                            <li class="navbar-brand" role="presentation"><a href="/Blog/Index">Blog Admin</a></li>
                            <li class="navbar-brand" role="presentation"><a href="/Category/Index">Kategori Admin</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            
            @if (IsSectionDefined("SagKolon"))
            {
                <div class="col-md-8">
                    @RenderBody()
                </div>
                <div class="col-md-4">
                    @RenderSection("SagKolon")
                </div>
            }
            else
            {
                <div class="col-md-12">
                    @RenderBody()
                </div>
            }
                     
        </div>

        <hr />
        <footer>
            <a href="#top">&copy; @DateTime.Now.Year - Sinan Çakır Blog</a>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>