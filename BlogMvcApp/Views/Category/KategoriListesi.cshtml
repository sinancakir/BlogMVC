@model IEnumerable<BlogMvcApp.Models.CategoryModel>


<div class="well">
    <h4>Kategoriler</h4>
    <hr />
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-lg-6">
                <ul class="nav nav-pills" role="tablist">
                    <li role="presentation">
                        <a href="/Blog/List/@item.Id">
                            @item.KategoriAdi
                            <span class="badge">@item.BlogSayisi</span>
                        </a>
                    </li>
                </ul>
            </div>
        }
    </div>
</div>