@{
    Layout = null;
}
<!doctype html>
<html class="no-js" lang="">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Sufee Admin - HTML5 Admin Template</title>
    <meta name="description" content="Sufee Admin - HTML5 Admin Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" href="apple-icon.png">
    <link rel="shortcut icon" href="favicon.ico">
    <link rel="stylesheet" href="~/Areas/Admin/assets/css/normalize.css">
    <link rel="stylesheet" href="~/Areas/Admin/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/assets/css/themify-icons.css">
    <link rel="stylesheet" href="~/Areas/Admin/assets/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/assets/css/cs-skin-elastic.css">
    <!-- <link rel="stylesheet" href="assets/css/bootstrap-select.less"> -->
    <link rel="stylesheet" href="~/Areas/Admin/assets/scss/style.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>
    <!-- <script type="text/javascript" src="https://cdn.jsdelivr.net/html5shiv/3.7.3/html5shiv.min.js"></script> -->
</head>
<body class="bg-dark">

    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">
                <div class="login-logo">
                    <a href="/Blog/List">
                        <img class="align-content" src="~/Areas/Admin/images/logo.png" alt="">
                    </a>
                </div>
                @using (Html.BeginForm())
                    {
                <div class="login-form">
                    
                    <div class="form-group">
                        <label>Kullanıcı Adı</label>
                        @*<input type="text" class="form-control" placeholder="Kullanıcı Adı">*@
                        @Html.TextBox("kullaniciAdi", null, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        @*<input type="password" class="form-control" placeholder="Şifre">*@
                        @Html.Password("sifre", null, new { @class = "form-control", placeholder = "Şifre" })
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> Remember Me
                        </label>
                        <label class="pull-right">
                            <a href="#">Forgotten Password?</a>
                        </label>
                    </div>
                    <button type="submit" class="btn btn-success btn-flat m-b-30 m-t-30">Sign in</button>

                    <div class="register-link m-t-15 text-center">
                        <p>Don't have account ? <a href="#"> Sign Up Here</a></p>
                    </div>
                  
                </div>
                }
            </div>
        </div>
    </div>

    <script src="~/Areas/Admin/assets/js/vendor/jquery-2.1.4.min.js"></script>
    <script src="~/Areas/Admin/assets/js/popper.min.js"></script>
    <script src="~/Areas/Admin/assets/js/plugins.js"></script>
    <script src="~/Areas/Admin/assets/js/main.js"></script>

</body>
</html>
